func prime(ptr)
    #素数かどうか判定する関数
    #引数はポインタ
    
    if access(ptr) 2 <
        return false
    end if　#2未満は素数ではない

    if access(ptr) 4 <
        return true
    end if　#2以上4未満は素数

    var count = 2
    while count access(ptr) 0.5 ^ <
        if access(ptr) count % 0 =
            return false
        end if #割れるか確かめる
        var count = count 1 +
    end while

    return true #戻り値は論理型
end func

