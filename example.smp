var true = 1.0　#論理値を設定する
var false = 0.0

func prime(ptr)
    #素数かどうか判定する関数
    #引数はポインタ
    
    if ptr ~ 2 <
        return false
    end if　#2未満は素数ではない

    var count = 2
    while count ptr ~ <
        if ptr ~ count % 0 =
            return false
        end if #割れるか確かめる
        var count = count 1 +
    end while

    return true #戻り値は論理型
end func

